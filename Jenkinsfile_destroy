pipeline {
  agent any

  environment {
    AWS_ACCESS_KEY_ID     = credentials('aws-access-key-id')       // ğŸ‘ˆ type : Secret Text
    AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')   // ğŸ‘ˆ type : Secret Text
  }

  parameters {
    string(name: 'CONFIRM', defaultValue: '', description: 'Tapez "OUI" pour confirmer la destruction.')
  }

  stages {
    stage('ğŸ§¹ Confirmation') {
      when {
        expression { return params.CONFIRM == 'OUI' }
      }
      steps {
        echo "âœ… Confirmation validÃ©e. On lance la destruction."
      }
    }

    stage('âš ï¸ Destroy Terraform Infra') {
      when {
        expression { return params.CONFIRM == 'OUI' }
      }
      steps {
        echo "ğŸš¨ Terraform destroy en cours..."
        sh '''
          terraform init
          terraform destroy -auto-approve
        '''
      }
    }

    stage('â›” Annulation') {
      when {
        expression { return params.CONFIRM != 'OUI' }
      }
      steps {
        echo "âŒ Destruction annulÃ©e. Veuillez entrer CONFIRM=OUI pour valider."
      }
    }
  }

  post {
