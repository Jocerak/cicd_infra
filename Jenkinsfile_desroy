pipeline {
  agent any

  environment {
    AWS_ACCESS_KEY_ID     = credentials('aws-access-key-id')
    AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
  }

  parameters {
    string(name: 'CONFIRM', defaultValue: '', description: 'Tapez "OUI" pour confirmer la destruction de l\'infrastructure.')
  }

  stages {
    stage('üßπ Confirmation') {
      when {
        expression { return params.CONFIRM == 'OUI' }
      }
      steps {
        echo "‚úÖ Confirmation valid√©e. On lance la destruction."
      }
    }

    stage('‚ö†Ô∏è Destroy Terraform Infra') {
      when {
        expression { return params.CONFIRM == 'OUI' }
      }
      steps {
        echo "üö® Terraform destroy en cours..."
        sh '''
          terraform init
          terraform destroy -auto-approve
        '''
      }
    }

    stage('‚õî Annulation') {
      when {
        expression { return params.CONFIRM != 'OUI' }
      }
      steps {
        echo "‚ùå Destruction annul√©e. Veuillez entrer CONFIRM=OUI pour valider."
      }
    }
  }

  post {
    always {
      echo "üßæ Fin du pipeline de destruction."
    }
  }
}
